            | 
            span.no-wrap.js-avoid you can buy one for yourself:&ensp;
            input.newsletter__input.js-avoid(type="email" name="EMAIL")
            div(style="position: absolute; left: -5000px;" aria-hidden="true")
              input(type="text" name="b_4c51e43f1162adc62d41e6ea5_a1420a8048" tabindex="-1" value="")
              input(type="submit")
        span.disclaimer.js-avoid N.B. that may never happen

      main.puzzles
        ol
          - var n = 10;
          while n > 1
            - n--
            li.puzzle
              .puzzle__media
                - var src = `https://res.cloudinary.com/abstract-puzzles/image/upload/c_scale,w_1480/00${n}_solve_001.jpg`
                img.puzzle__img(preserveAspectRatio="xMidYMax slice" src=src)
                img.puzzle__img(preserveAspectRatio="xMidYMax slice" src=`https://res.cloudinary.com/abstract-puzzles/image/upload/c_scale,w_1480/00${n}_solve_006.jpg`)
              .puzzle__info
                h2.puzzle__title= `00${n}`
                .puzzle__meta
                  button.cta Play with it
                  button.cta Open in IDE
                  button.cta Check out code
                  button.cta Watch solve
            
